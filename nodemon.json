{
    "watch": [
        "src"
    ],
    "ext": ".ts,.js,.json",
    "ignore": [
        "dist",
        "node_modules",
        "build"
    ],
    "exec": "ts-node -r dotenv-flow/config -r tsconfig-paths/register --transpile-only ./src/server.ts",
    "env": {
        "NODE_ENV": "development"
    }
}