{
  "name": "node-type-mongo-mvc",
  "version": "1.0.0",
  "description": "Boilerplate for nodejs+typescript for mongodb",
  "main": "src/server.js",
  "scripts": {
    "dist": "pnpm tsc",
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production node -r dotenv-flow/config dist/server.js",
    "start:build": "cross-env NODE_ENV=production node -r dotenv-flow/config build/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky",
    "migrate:dev": "cross-env MIGRATE_MODE=development node script/migration.js",
    "migrate:prod": "cross-env MIGRATE_MODE=production node script/migration.js",
    "esbuild:build": "node script/build.mjs",
    "esbuild:serve": "node script/serve.mjs",
    "esbuild:analyze": "node script/analyze.mjs",
    "swagger:build": "node script/swagger.mjs"
  },
  "author": "Rutvik Chaudhary",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "pnpm lint:fix",
      "pnpm format:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "@types/source-map-support": "^0.5.10",
    "esbuild": "^0.24.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "sequelize-typescript": "^2.1.6",
    "swagger-autogen": "^2.23.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "rate-limiter-flexible": "^5.0.3",
    "sequelize": "^6.37.5",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.1"
  }
}